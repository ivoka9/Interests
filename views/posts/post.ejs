<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Blog Post - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    
    <link rel="stylesheet" href="/styles/post.css">
  </head>

  <body>
    <!-- Navigation -->
    <nav>
      <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
          <a class="nav-link nav-custom rounded-0" href="/interests"
            >My Interests</a
          >
        </li>
        <li class="nav-item">
          <a href="/post" class="nav-link nav-custom rounded-0">
            See your all posts that u like
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-custom rounded-0" href="/post/mine/<%=userid%>"
            >My posts</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link nav-custom rounded-0" href="/post/create"
            >Create a Post</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link nav-custom rounded-0" href="/logout">Logout</a>
        </li>
      </ul>
    </nav>
    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
          <!-- Title -->
          <h1 class="mt-4"><%=post.Title%></5></h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="/post/mine/<%=post.User._id%>"><%=post.User.Username%></a>
          </p>
          <hr />
          <!-- Preview Image -->
           <% if(post.Url){ %>
          <img
            class="img-fluid rounded"
            src="<%=post.Url%>"
            alt=""
          />
           <% }else{ %>
            <img
            class="img-fluid rounded"
            src="/img/d.jpg"
            alt=""
          />
           <% }%>
          <hr />
          <!-- Post Content -->
          <p class="lead">
            <%=post.Description %>
          </p>
          <hr />
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
    

          <!-- Categories Widget -->
          <div class=" tags card  ">
            <h5 class="card-header">Tags</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled tag mb-0">
                  <% post.Interests.forEach(tag => { %>
                    <li><%=tag%><li>
                  <% }) %>
                  </ul>
                </div>
              
              </div>
            </div>
          
          </div>
          <!-- Side Widget -->
          <%if(post.User._id == userid){  %>
            <div class="card my-4 text-center">
              <h5 class="card-header ">Permenetly Delete the Post</h5>
              <form class='mt-3 mb-3' action="/post/<%=post._id%>/del?_method=DELETE" method="POST">
                <input class='btn btn-danger'type="submit" value="Delete">
              </form>
            </div>
            
          <% } %>       
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container -->

  

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
